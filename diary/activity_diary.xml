<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAF5"

    tools:context=".diary">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/corner_1"
        android:gravity="center"
        android:text="自製牌牛肉麵"
        android:textColor="#081871"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="243dp"
        android:layout_height="202dp"
        android:background="#F3D5D5"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/d5202577" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/go_re"
            android:layout_width="30dp"
            android:layout_height="39dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/aaaa" />

        <TextView
            android:id="@+id/date"
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:background="@drawable/line_00"
            android:focusable="false"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#081871"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="282dp"
        android:layout_height="121dp"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:lineSpacingExtra="10sp"
        android:text="平時懶惰的我，跟著此款App做出如此完美的一頓午餐，越煮越有心得。\n秋冬時節最喜歡來碗湯麵了，在外吃的牛麵總是不合自己味蕾，自己煮簡單又能調整味道"
        android:textColor="#081871"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />


</androidx.constraintlayout.widget.ConstraintLayout>
